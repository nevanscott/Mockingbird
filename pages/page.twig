{% extends "layouts/default.twig" %}

{% block content %}
                <div class="page">
                    {% if page.editable and page.deletable %}
                    <span class="controls right">
                        $page.edit_link
                        &middot;
                        $page.delete_link
                    </span>
                    {% elseif page.editable or page.deletable %}
                    <span class="controls right">
                        $page.edit_link
                        $page.delete_link
                    </span>
                    {% endif %}
                    <h1>$page.title</h1>
                    $page.body
                </div>
{% endblock %}
